<!DOCTYPE html>
<html>
  <head>
    <title>WynEats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <nav class="navbar navbar-default">

      <div class="container">

        <div class="navbar-header">
          <%= link_to "Food Ratings", root_path, class: "navbar-brand" %>
        </div>

        <ul class="nav navbar-nav">
          <li><%= link_to "Sign-Up", signup_path %></li>
          <% if current_user %>
            <li><%= link_to "Sign Out", logout_path, method: :destroy %></li>
          <% else  %>
            <li><%= link_to "Log In", login_path %></li>
            <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Cuisine <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <% Restaurant.all.each do |restaurant| %>
                <li class="<%= 'active' if params[:restaurants] == restaurant.name %>">
                  <%= link_to restaurant.name, restaurant_path(restaurant), class: "link" %>
                </li>
              <% end %>
            </ul>
          </li>

          <% if current_user %>
            <li><%= link_to "Add Restaurant", new_restaurant_path %></li>
          <% end %>
        </ul>

      </div>

    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
