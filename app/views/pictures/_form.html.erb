<%= form_with(model: @picture, local: true, html: { multipart: true }) do |form| %>

  <div class="field">
    <%= form.hidden_field :restaurant_id, id: :restaurant_id, value: !@picture.new_record? ? @picture.restaurant.id : @restaurant.id %>
  </div>


  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, id: :picture_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
